<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 text-white p-10">
        <a class="mb-10 text" href="/">Bak to home</a>
      <h1 class="text-3xl tracking-tighter mb-3">All users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% users.forEach(function(user){%>
            <div class="user w-72 p-10 bg-zinc-800 rounded-lg">
                <div class="w-full h-72 bg-zinc-700  rounded-lg overflow-hiddem">
                    <img class="w-full h-full object-cover" src="<%= user.image%>" alt="">
                </div>
                <h3 class="text-xl tracking-tighter mt-3"><%= user.name%></h3>
                <h5 class="text-zinc-500"><%= user.email%></h5>
                <div class="flex gap-3 mt-10">
                    <a class="text-zinc-200" href="">Edit User</a>
                    <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
                </div>
            </div>

            <% }) %>
        
      </div>
    </div>
  </body>
</html>
